<Window x:Class="DeckOfManyThings.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeckOfManyThings"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="About The Deck of Many Things" Height="300" Width="400">
    <Grid>
        <Image x:Name="logoImage" HorizontalAlignment="Left" Height="249" Margin="201,10,0,0" VerticalAlignment="Top" Width="181" Source="logo.png"/>
        <Label x:Name="nameLabel" Content="The Deck of Many Things" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" BorderThickness="0" Height="32" FontSize="16"/>
        <Label x:Name="copyrightLabel" Content="© Qiwi Trails Hosting 2017" HorizontalAlignment="Left" Margin="39,42,0,0" VerticalAlignment="Top" FontSize="10"/>
        <Button x:Name="oglButton" Content="Open Game License Document" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Width="186" ToolTip="Click here to view the Open Game License" Click="OpenGameLicense"/>
        <Button x:Name="qtButton" Content="Visit our Website" HorizontalAlignment="Left" Margin="47,65,0,0" VerticalAlignment="Top" Width="120" Click="QiwiTrailsWebsite"/>
    </Grid>
</Window>
